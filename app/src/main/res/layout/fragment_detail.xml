<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.milenaasic.contacttest.DetailFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:foregroundGravity="bottom">

        <ImageView
            android:id="@+id/myimageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foregroundGravity=""
            android:scaleType="centerInside"
            app:srcCompat="@color/colorPrimary"
            tools:foregroundGravity="bottom" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/emptyView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="TextView" />

            <TextView
                android:id="@+id/mytextView"
                android:layout_width="0dp"
                android:layout_height="?attr/actionBarSize"
                android:layout_gravity="bottom"
                android:layout_weight="4"
                android:gravity="center_vertical"

                android:paddingLeft="16dp"
                android:text="@string/call_via_veritel"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="@android:color/white"
                android:textColorHighlight="@color/colorAccent"
                android:textSize="24dp" />
        </LinearLayout>


    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/myCardContact0"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginTop="16dp">


            <ImageView
                android:id="@+id/imageView0"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                app:srcCompat="@android:drawable/sym_action_call" />

            <TextView
                android:id="@+id/phonetextView0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:paddingBottom="8dp"
                android:paddingLeft="16dp"
                android:paddingTop="8dp"
                android:text="TextView"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textSize="@dimen/contactItemTextSize" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
